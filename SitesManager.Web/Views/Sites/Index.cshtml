@using SitesManager.Data.Models.Site
@model IEnumerable<SitesManager.Web.ViewModels.Site.SiteViewModel>

@{
    ViewBag.Title = "Список сайтов";
    var activeStatusValue = SiteStatus.Active;
    var disableStatusValue = SiteStatus.Disable;
}

<h2>@ViewBag.Title</h2>

@if (Model.Any())
{
    if (Request.IsAuthenticated)
    {
        <hr/>
        <p>
            @Html.ActionLink("Добавить сайт", "Create")
        </p>
    }

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            @if (Request.IsAuthenticated)
            {
                <th></th>
            }
        </tr>

        @foreach (var item in Model)
        {
            <tr data-id="@item.Id" data-status="@((int) item.Status)">
                <td>
                    @Html.ActionLink(item.Name, "Details", new {id = item.Id})
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td name="activeStatus" style="@(item.Status == activeStatusValue ? "" : "display:none")">
                    @Html.DisplayFor(modelItem => activeStatusValue)
                </td>
                <td name="disableStatus" style="@(item.Status == disableStatusValue ? "" : "display:none")">
                    @Html.DisplayFor(modelItem => disableStatusValue)
                </td>
                @if (Request.IsAuthenticated)
                {
                    <td>
                        @Html.ActionLink("Изменить", "Edit", new {id = item.Id}) |
                        @Html.ActionLink("Удалить", "Delete", new {id = item.Id})
                    </td>
                }
            </tr>
        }

    </table>
}
else
{
    <hr/>
    <p>
        Не найдено ни одного сайта. @if (Request.IsAuthenticated)
                                    {
                                        @Html.ActionLink("Добавить сайт", "Create")@:?
                                    }
    </p>
}

@section Scripts{
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/signalr")
    <script type="text/javascript" src="~/signalr/hubs"></script>
}